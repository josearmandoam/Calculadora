<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="-16dp"
    android:layout_marginLeft="-16dp"
    android:layout_marginRight="-16dp"
    android:layout_marginBottom="-16dp"
    tools:context="com.example.jose.calculadora.MainActivity">

    <TableLayout
        android:shrinkColumns="3"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:textColor="#FF65C3F2"
                android:textAlignment="textEnd"
                android:layout_span="4"
                android:textSize="30sp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:padding="10dp"
                android:layout_span="4"
                android:id="@+id/textView3"
                android:textSize="70sp"
                android:editable="false"
                android:background="@android:color/white"
                android:textAlignment="textEnd"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:textStyle="italic"
                android:textColor="#FF000000"
                android:background="@drawable/celdasborrados"
                android:text="CE"
                android:id="@+id/bCE"
                android:textAlignment="center"
                android:textSize="30sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textColor="#FF000000"
                android:background="@drawable/celdasborrados"
                android:textStyle="italic"
                android:text="C"
                android:id="@+id/bC"
                android:textAlignment="center"
                android:textSize="30sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textColor="#FF000000"
                android:background="@drawable/celdasborrados"
                android:textStyle="italic"
                android:text="DEL"
                android:id="@+id/bDEL"
                android:textAlignment="center"
                android:textSize="30sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textStyle="bold"
                android:textColor="#FF65C3F2"
                android:background="@drawable/celdasoperandos"
                android:text="+"
                android:id="@+id/bMas"
                android:textSize="30sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:background="@drawable/celdas"
                android:textColor="@android:color/white"
                android:text="7"
                android:id="@+id/b7"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:background="@drawable/celdas"
                android:textColor="@android:color/white"
                android:text="8"
                android:id="@+id/b8"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:background="@drawable/celdas"
                android:textColor="@android:color/white"
                android:text="9"
                android:id="@+id/b9"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textColor="#FF65C3F2"
                android:textStyle="bold"
                android:background="@drawable/celdasoperandos"
                android:text="-"
                android:id="@+id/bMenos"
                android:textSize="36sp"
                android:onClick="pulsado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </TableRow>


        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"

                android:text="4"
                android:id="@+id/b4"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="5"
                android:id="@+id/b5"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="6"
                android:id="@+id/b6"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textStyle="bold"
                android:textColor="#FF65C3F2"
                android:background="@drawable/celdasoperandos"
                android:text="x"
                android:id="@+id/bMul"
                style="@style/Widget.AppCompat.Button.Small"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="1"
                android:id="@+id/b1"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="2"
                android:id="@+id/b2"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="3"
                android:id="@+id/b3"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

            <Button
                android:textStyle="bold"
                android:textColor="#FF65C3F2"
                android:background="@drawable/celdasoperandos"
                android:text="รท"
                android:id="@+id/bDividir"
                android:textSize="36sp"
                android:onClick="pulsado"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="match_parent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="0"
                android:id="@+id/b0"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/celdas"
                android:text="."
                android:id="@+id/bPunto"
                android:textSize="24sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:textColor="#FF000000"
                android:background="@drawable/celdasborrados"
                android:textStyle="italic"
                android:text="M"
                android:id="@+id/bM"
                android:textAlignment="center"
                android:textSize="30sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:textStyle="bold"
                android:textColor="#FF65C3F2"
                android:background="@drawable/celdasoperandos"
                android:text="="
                android:layout_span="2"
                android:id="@+id/bIgual"
                android:textSize="30sp"
                android:onClick="pulsado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
